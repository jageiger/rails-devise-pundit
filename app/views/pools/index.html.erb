<h1>Listing pools</h1>

<table>
  <thead>
    <tr>
      <th>Ip</th>
      <th>User name</th>
      <th>Password</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_user.admin? %>
	<% @pools.each do |pool| %>
      <tr>
        <td><%= pool.ip %></td>
        <td><%= pool.user_name %></td>
        <td><%= pool.password %></td>
        <td><%= pool.user_id %></td>
        <td><%= link_to 'Show', pool %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
	<% end %>
  <% else %>
	<% @pools.select{|t| t.user == current_user}.each do |pool| %>
      <tr>
        <td><%= pool.ip %></td>
        <td><%= pool.user_name %></td>
        <td><%= pool.password %></td>
        <td><%= link_to 'Show', pool %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pool', new_pool_path %>
